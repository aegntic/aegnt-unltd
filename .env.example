# NexusAgent Environment Configuration

# Neo4j (Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# PostgreSQL
POSTGRES_USER=nexus
POSTGRES_PASSWORD=nexus
POSTGRES_DB=nexusagent
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Ollama (Local Models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODELS_PATH=/root/.ollama

# Optional: OpenAI for embeddings (if not using local)
OPENAI_API_KEY=

# Optional: Cloud providers
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
GCP_PROJECT=

# Server
API_HOST=0.0.0.0
API_PORT=8000
DASHBOARD_PORT=3000
